%% PART 5%%


\newglossaryentry{name}{
  name = name,
  description = {A linguistic expression used to refer to a unique thing without describing it. In \pl names refer to items of a unique thing of a domain}
  }

  \newglossaryentry{predicate}{
    name = predicate,
  description = {A property of a thing, or a relation between things. In \pl, predicates are symbols used to symbolise a property or relation}
}

\newglossaryentry{quantifier}{
  name = quantifier,
  description = {Quantifiers are symbols of \pl\ that are used to refer to several things at the same time.}
}

\newglossaryentry{universal quantifier}{
  name = universal quantifier,
  description = {The symbol $\forall$ of \pl\ used to refer to all things in a domain; $\forall x\, \atom{F}{x}$ is true iff every member of the domain is~$F$}
}

\newglossaryentry{existential quantifier}{
  name = existential quantifier,
  description = {The symbol $\exists$ of \pl\ used to refer to some things in a domain; $\exists x\, \atom{F}{x}$ is true iff at least one member of the domain is~$F$}
}


\newglossaryentry{variable}{
  name = variable,
  description = {A symbol of \pl\ used following quantifiers and as placeholders in atomic formulas; lowercase letters between $s$ and~$z$}
}

\newglossaryentry{domain}{
  name = domain,
  description = {The collection of objects assumed for a symbolisation in \pl, or that gives the range of the quantifiers in an \gls{interpretation}}
}


\newglossaryentry{interpretation}{
  name = interpretation,
  description = {***}
}

